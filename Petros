import java.util.Scanner;

class petros {

    //Expense class
    class Exp {

        private Emp emp;
        private ExpType type;
        private double quant;
        private String reason;

        public Exp (Emp emp, ExpType type, double quant, String reason) {

            this.emp = emp;
            this.type = type;
            this.quant = quant;
            this.reason = reason;
        
        }

        public getExp () {}

    }

    //ExpenseType class and subclasses
    abstract class ExpType {

        private int ID;
        private String desc;
        private double maxExp;

        public ExpType (int ID, String desc, double maxExp) {

            this.ID = ID;
            this.desc = desc;
            this.maxExp = maxExp;

        }
     
        public double calcValue() {
            return ;
        }

    }
      
    class ExpType1 extends ExpType {

        private double price;

        public ExpType1(int ID, String desc, double maxExp, double price) {

            super(ID, desc, maxExp);
            this.price = price;

        }

    }
      
    class ExpType2 extends Exptype {

        private double rate;

        public ExpType2(int ID, String desc, double maxExp, double rate) {

            super(ID, desc, maxExp);
            this.rate = rate;

        }

    }

    //Emploee class     
    class Emp {

        private String name, surname;
        private double maxTotal;

        public Emp (String n, String s, double max) {

            name = n;
            surname = s;
            maxTotal = max;

        }

        public String toString () {

            return "Emploee name: " + name
                    + "\nEmploee last name: " + surname;

        }
    
    }

    
