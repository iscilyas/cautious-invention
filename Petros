mport java.util.Scanner;

public class petros {

    //Expense class
    class Exp {

        private Emp emp;
        private ExpType type;
        private double quant;
        private String reason;

        public Exp (Emp emp, ExpType type, double quant, String reason) {

            this.emp = emp;
            this.type = type;
            this.quant = quant;
            this.reason = reason;
        
        }

        public Emp getEmp() {

            return this.emp;

        } 

        public ExpType getExpType () {

            return this.type;
            
        }

        public double getQuant () {

            return this.quant;

        }

        @Override
        public String toString () {

            return this.emp + " " + this.type + " " + this.quant + " " + this.reason;

        }
        

    }

    //ExpenseType class and subclasses
    abstract class ExpType {

        private int ID;
        private String desc;
        private double maxMonthlyExp;

        public ExpType (int ID, String desc, double maxMonthlyExp) {

            this.ID = ID;
            this.desc = desc;
            this.maxMonthlyExp = maxMonthlyExp;

        }

        public int getExpType () {

            return this.ID;

        }

        public String getDescription () {

            return this.desc;

        }

        public double getMaxMonthlyExp () {

            return this.maxMonthlyExp;

        }

        @Override
        public String toString () {

            return this.ID + " " + this.desc + " " + this.maxMonthlyExp;

        }

    }
      
    class ExpType1 extends ExpType {

        private double price, unitNo;

        public ExpType1 (int ID, String desc, double maxExp, double price, double unitNo) {

            super (ID, desc, maxExp);
            this.price = price;

        }

        public double getPrice () {

            return this.price;

        }

        public double getUnitNo () {

            return this.unitNo;

        }

        public double calcValue (double quant) {

            return  quant * this.price;

        }

    }
      
    class ExpType2 extends ExpType {

        private double rate;

        public ExpType2 (int ID, String desc, double maxExp, double rate) {

            super (ID, desc, maxExp);
            this.rate = rate;

        }

        public double getRate() {

            return this.rate;

        }

        public double calcValue (double n) {

            return n * this.rate;

        }



    }

    //Employee class     
    class Emp {

        private String name, surname;
        private double maxMonthlyTotal;

        public Emp (String n, String s, double max) {

            name = n;
            surname = s;
            maxMonthlyTotal = max;

        }

        public String getFirstName () {

            return this.name;

        }

        public String getLastName () {

            return this.surname;

        }

        public double getMaxMonthlyTotal () {

            return this.maxMonthlyTotal;

        }

        public void setMaxMonthlyTotal (final double maxMonthlyTotal) {

            this.maxMonthlyTotal = maxMonthlyTotal;

        }

        @Override
        public String toString () {
            
            return name + " " + surname;
            
        }
    
    }

    
    public static void main(String[] args) {

        Scanner in = new Scanner(System.in);

        
        
        
    }

}
