import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;
import java.util.Scanner;

public class petros {

    //Expense class
    class Exp {

        private Emp emp;
        private ExpType type;
        private double quantity;
        private String reason;

        public Exp (Emp emp, ExpType type, double quant, String reason) {

            this.emp = emp;
            this.type = type;
            this.quantity = quant;
            this.reason = reason;
        
        }

        public Emp getEmp() {

            return this.emp;

        } 

        public ExpType getExpType () {

            return this.type; 
            
        }

        public double getQuant () {

            return this.quantity;

        }

        @Override
        public String toString () {

            return this.emp + " " + this.type + " " + this.quantity + " " + this.reason;

        }
        

    }

    //ExpenseType class
    abstract class ExpType {

        private int ID;
        private String desc;
        private double maxMonthlyExp;

        public ExpType (int ID, String desc, double maxMonthlyExp) {

            this.ID = ID;
            this.desc = desc;
            this.maxMonthlyExp = maxMonthlyExp;

        }

        public int getID () {

            return this.ID;

        }

        public String getDescription () {

            return this.desc;

        }

        public double getMaxMonthlyExp () {

            return this.maxMonthlyExp;

        }

        @Override
        public String toString () {

            return this.ID + " " + this.desc + " " + this.maxMonthlyExp;

        }

    }
    //ExpenseType 1
    class ExpType1 extends ExpType {

        private double price, unitNo;

        public ExpType1 (int ID, String desc, double maxExp, double price, double unitNo) {

            super (ID, desc, maxExp);
            this.price = price;
            this.unitNo = unitNo;

        }

        public double getPrice () {

            return this.price;

        }

        public void setUnitNo (double unitNo) {

            this.unitNo = unitNo;

        }

        public double getUnitNo () {

            return this.unitNo;

        }
        
        public double calcValue (double quantity) {

            return  quantity * this.price;

        }

    }
    //ExpenseType 2
    class ExpType2 extends ExpType {

        private double rate;

        public ExpType2 (int ID, String desc, double maxExp, double rate) {

            super (ID, desc, maxExp);
            this.rate = rate;

        }

        public double getRate() {

            return this.rate;

        }
        
        public double calcValue (double n) {

            return (n * this.rate) / 100;

        }



    }

    //Employee class
    class Emp {

        private String name, surname;
        private double maxMonthlyTotal;

        public Emp (String n, String s, double max) {

            name = n;
            surname = s;
            maxMonthlyTotal = max;

        }

        public String getFirstName () {

            return this.name;

        }

        public String getLastName () {

            return this.surname;

        }

        public double getMaxMonthlyTotal () {

            return this.maxMonthlyTotal;

        }

        public void setMaxMonthlyTotal (final double maxMonthlyTotal) {

            this.maxMonthlyTotal = maxMonthlyTotal;

        }

        @Override
        public String toString () {
            
            return name + " " + surname;
            
        }
    }

    //Transaction class
    abstract class Trans {
        private Emp employee;
        private double value;
    
        public Trans(Emp employee, double value) {
            this.employee = employee;
            this.value = value;
        }
    
        public Emp getEmployee() {
            return this.employee;
        }
    
        public double getValue() {
            return this.value;
        }
    
        public abstract double reimbursementAmount();
    }


    class AccountingDepartment {
        private static Scanner input;

        private ArrayList<Emp> employees;
        private ArrayList<Exp> expenses;
        private ArrayList<ExpType> expenseTypes;
        private ArrayList<Trans> transactions;

        public AccountingDepartment() {

            this.employees = new ArrayList<Emp>();
            this.expenses = new ArrayList<Exp>();
            this.expenseTypes = new ArrayList<ExpType>();

        }

        public void addEmployee(final Emp a) {
            this.employees.add(a);
        }
        
        public void addExpense(final Exp a) {
            this.expenses.add(a);
        }

        public void addExpenseType(final ExpType a) {
            this.expenseTypes.add(a);
        }

        public void addDownPayment(final Trans b) {
            this.transactions.add(b);
        }

        public void addCompensation() {
            
        }

        public void addDifference() {

        }

        private ArrayList<EmployeeMovement> employeeMovements;

        static AccountingDepartment accountingDepartment;
    }

    

    public static void main(String[] args) {
        accountingDepartment = new AccountingDepartment();
    }
}
